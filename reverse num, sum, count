#include<stdio.h>
int main()
{
    int n,d, count=0, sum=0;
    
    printf ("Enter the number: ");
    scanf ("%d", &n);
    
    while (n){
        d=n%10;
        n/=10;
        printf ("%d", d);
        
        count++;
        
        if (d%2 ==0){    //sum for only even
            sum+=d;
        }
    }
    
    printf("\nCount = %d\n", count);
    printf("Sum = %d", sum);
    
}
